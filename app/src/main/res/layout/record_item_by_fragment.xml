<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:layout_gravity="center_horizontal">
    <TextView
        android:id="@+id/FragmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:text="Add invoice"/>
    <EditText
        android:id="@+id/EditTxtItem"
        android:layout_below="@+id/FragmentTitle"
        android:layout_width="195dp"
        android:layout_marginLeft="50dp"
        android:layout_height="wrap_content"
        android:hint="Item"/>
    <EditText
        android:id="@+id/EditTxtPrice"
        android:layout_width="195dp"
        android:layout_below="@+id/EditTxtItem"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Price"/>
    <EditText
        android:id="@+id/EditTxtQuantity"
        android:layout_width="195dp"
        android:layout_below="@+id/EditTxtPrice"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:hint="Quantity"/>
    <TextView
        android:id="@+id/btnDateAndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="55dp"
        android:clickable="true"
        android:layout_below="@id/EditTxtQuantity"
        android:text="Add date/time"/>



</RelativeLayout>